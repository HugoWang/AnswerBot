<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#337AB7"
    tools:context=".AddCriteriaActivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/SubmitNewCriterionBtn"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lastlayout"
        android:background="@drawable/buttongreen"
        android:onClick="SubmitCriterionBtnClick"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/background_question_rounded_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout5"
        android:layout_marginBottom="3px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Question: "
            android:paddingLeft="10dp"
            android:paddingRight="6dp"
            android:id="@+id/AddCriteriaQuestionTextView"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="20dp" />

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/viewsContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="6dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="description of the question..."
                android:id="@+id/AddCQ_detail"
                android:layout_marginBottom="5dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4"
        android:layout_below="@+id/linearLayout5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Insert your new criteria:"
            android:paddingLeft="10dp"
            android:paddingRight="6dp"
            android:id="@+id/add_c_1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="6dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/NewCriterionEditText"
                android:layout_marginBottom="5dp"
                android:hint="Enter your new criteria here..."
                android:maxLines="3"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/lastlayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tell us more about the criteria:"
            android:paddingLeft="10dp"
            android:paddingRight="6dp"
            android:id="@+id/add_c_2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="6dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/NewCriterionDetailsEditText"
                android:layout_marginBottom="5dp"
                android:hint="Enter details of the criteria..."
                android:maxLines="3"
                android:textSize="20dp"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
