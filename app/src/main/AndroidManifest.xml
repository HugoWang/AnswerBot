<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kaiwang.answerbot" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme"
        android:label="@string/app_name">
        <activity
            android:name=".EntryActivity"
            android:label="Register"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".AddCriteriaActivity"
            android:label="@string/title_activity_add_criteria"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".AddOptionsActivity"
            android:label="@string/title_activity_add_options"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".DonateKnowledgeActivity"
            android:label="@string/title_activity_donate_knowledge"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".GetRecomendActivity"
            android:label="@string/title_activity_get_recomend"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".AddQuestionActivity"
            android:label="@string/title_activity_add_question"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER"
                    android:screenOrientation="portrait"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
