<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.answerbot.mobile">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".EntryActivity"
            android:label="Register"
            android:screenOrientation="portrait" />

        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait" />

        <activity
            android:name=".AddCriteriaActivity"
            android:label="@string/title_activity_add_criteria"
            android:screenOrientation="portrait"
            android:parentActivityName=".HomeActivity"/>
        <activity
            android:name=".AddOptionsActivity"
            android:label="@string/title_activity_add_options"
            android:screenOrientation="portrait"
            android:parentActivityName=".HomeActivity"/>
        <activity
            android:name=".DonateKnowledgeActivity"
            android:label="@string/title_activity_donate_knowledge"
            android:screenOrientation="portrait"
            android:parentActivityName=".HomeActivity"/>
        <activity
            android:name=".GetRecomendActivity"
            android:label="@string/title_activity_get_recomend"
            android:screenOrientation="portrait"
            android:parentActivityName=".HomeActivity"/>
        <activity
            android:name=".AddQuestionActivity"
            android:label="@string/title_activity_add_question"
            android:screenOrientation="portrait"
            android:parentActivityName=".HomeActivity"/>

        <activity android:name=".WelcomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="f1e381de1285a51e338cdba402b63af47aad844f" />

    </application>

</manifest>
